<% if notice%>
<div class="alert alert-info"><%= notice %></div>
<% end %>


<%= link_to 'New image', new_admin_image_path, class: 'btn btn-success' %>
<%# link_to 'Main page', root_path, class: 'btn btn-primary pull-right' %>
<%= link_to 'Sign out',  destroy_user_session_path, method: :delete, class: 'btn btn-warning pull-right' %>

<br/>
<br/>
<div class="col-md-12">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Images</h3>
    </div>
  <div class="panel-body">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag image.avatar.url(:thumb) %></td>
        <td><%= image.description %></td>
        <td><%= link_to 'Show',[:admin, image], class: "button btn btn-success" %></td> 
        <td><%= link_to 'Edit', edit_admin_image_path(image), class: "button btn btn-warning" %></td> 
        <td><%= link_to 'Destroy',[:admin, image], method: :delete, data: { confirm: 'Are you sure?' }, class: "button btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>